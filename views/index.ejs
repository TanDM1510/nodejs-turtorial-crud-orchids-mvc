<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Dashboard</h1>
  <a href="/logout" class="btn btn-sm btn-label-danger">Log out</a>
  <a href="/profile/<%= user%>" type="button" class="btn btn-warning btn-small">
    <i class="bi bi-pencil"></i>
  </a>
</div>
<div class="d-flex justify-content-between">
  <!-- <%- include('../views/partials/header.ejs') %> -->
  <div class="btn-toolbar mb-2 mb-md">
    <div class="btn-group me-2 mt-3 mb-3">
      <a href="/orchids/add" class="btn btn-sm btn-outline-secondary"
        >+ New orchid</a
      >
    </div>
  </div>
</div>
<!-- <% messages.forEach(element => { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= element %>
</div>
<% }) %>  -->

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Orchid's Name</th>
        <th scope="col">Picture</th>
        <th scope="col">Price</th>
        <!-- <th scope="col">Original</th> -->
        <!-- <th scope="col">Category</th> -->
        <th scope="col">Natural</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <% orchids.forEach(element => { %>
      <tr class="align-middle">
        <td><%= element.name %></td>
        <td><img src="<%= element.image %>" width="50" height="50" /></td>
        <td>$<%= element.price %></td>

        <td><%= element.isNatural ? 'Nature' : 'Mutation' %></td>
        <td class="text-end">
          <div class="d-flex flex-row justify-content-end gap-2">
            <a
              href="/orchids/<%= element._id %>"
              type="button"
              class="btn btn-primary btn-small"
            >
              <i class="bi bi-eye"></i>
            </a>

            <a
              href="/orchids/edit/<%= element._id %>"
              type="button"
              class="btn btn-warning btn-small"
            >
              <i class="bi bi-pencil"></i>
            </a>

            <!-- <form
              action="/orchids/<%= element._id %>?_method=DELETE"
              method="POST"
              class="position-relative"
            >
              <button type="submit" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
              </button>
            </form> -->
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<% if (orchids.length > 0) { %>
<nav aria-label="Dashboard Pagination " style="margin-top: 100px">
  <ul class="pagination justify-content-center mt-5">
    <% if (current == 1) { %>
    <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
    <% } else { %>
    <li class="page-item">
      <a href="/orchids/?page=1" class="page-link">First</a>
    </li>
    <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <%
    if(i !== 1) { %>
    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
    <% } %> <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %> <% if
    (i == current) { %>
    <li class="page-item disabled">
      <a href="#" class="page-link"><%= i %></a>
    </li>
    <% } else { %>
    <li class="page-item">
      <a href="/orchids/?page=<%= i %>" class="page-link"><%= i %></a>
    </li>
    <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
    <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
    <% } %> <% } %> <% if (current == pages) { %>
    <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
    <% } else { %>
    <li class="page-item">
      <a href="/orchids/?page=<%= pages %>" class="page-link">Last</a>
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
