<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Search</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/orchids/add" class="btn btn-sm btn-outline-secondary"
        >+ New orchid</a
      >
    </div>
  </div>
</div>

<div class="table-responsive">
  <% if (orchids != "") { %>

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Orchid's Name</th>
        <th scope="col">Picture</th>
        <th scope="col">Price</th>
        <th scope="col">Original</th>
        <th scope="col">Color</th>
        <th scope="col">Natural</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <% orchids.forEach(element => { %>
      <tr class="align-middle">
        <td><%= element.name %></td>
        <td><img src="<%= element.image %>" width="50" height="50" /></td>
        <td>$<%= element.price %></td>
        <td><%= element.original %></td>
        <td><%= element.color %></td>
        <td><%= element.isNatural ? 'Nature' : 'Mutation' %></td>
        <td class="text-end">
          <div class="d-flex flex-row justify-content-end gap-2">
            <a
              href="/orchids/<%= element._id %>"
              type="button"
              class="btn btn-primary btn-small"
            >
              <i class="bi bi-eye"></i>
            </a>

            <a
              href="/orchids/edit/<%= element._id %>"
              type="button"
              class="btn btn-warning btn-small"
            >
              <i class="bi bi-pencil"></i>
            </a>

            <form
              action="/orchids/<%= element._id %>?_method=DELETE"
              method="POST"
              class="position-relative"
            >
              <button type="submit" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
              </button>
            </form>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <% } else { %>
  <h2>No results found.</h2>
  <% } %>
</div>
