<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Orchid</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/orchids">Dashboard</a></li>
          <li class="breadcrumb-item active">New Orchid</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b></b>
    </div>
  </div>
</div>

<form action="/orchids" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="name">Orchid's Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value=""
        placeholder="name"
        required
      />
    </div>

    <div class="col">
      <label for="image">Image</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="image"
        value=""
        placeholder="image"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="price">Price</label>
      <input
        type="number"
        min="0"
        class="form-control"
        id="price"
        name="price"
        value=""
        placeholder="price"
        required
      />
    </div>

    <div class="col">
      <label for="original">Original</label>
      <input
        type="text"
        class="form-control"
        id="original"
        name="original"
        value=""
        placeholder="original"
        required
      />
    </div>

    <div class="col">
      <label for="color">Color</label>
      <input
        type="text"
        class="form-control"
        id="color"
        name="color"
        value=""
        placeholder="color"
        required
      />
    </div>
    <div class="col">
      <label>Is Natural:</label>
      <div class="form-check">
        <input
          type="radio"
          class="form-check-input"
          id="trueRadio"
          name="isNatural"
          value="true"
        />
        <label class="form-check-label" for="trueRadio">True</label>
      </div>
      <div class="form-check">
        <input
          type="radio"
          class="form-check-input"
          id="falseRadio"
          name="isNatural"
          value="false"
        />
        <label class="form-check-label" for="falseRadio">False</label>
      </div>
    </div>
  </div>

  <!-- <div class="form-group mb-4">
    <label for="details">Customer Details</label>
    <textarea
      class="form-control"
      name="details"
      id="details"
      cols="30"
      rows="12"
      placeholder="Customer Details"
    ></textarea>
  </div> -->

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Orchid</button>
  </div>
</form>
