<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Editing: <%= customer.name %> <%= customer.lastName %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/orchids">Dashboard</a></li>
          <li class="breadcrumb-item active">
            <%= customer.name %> <%= customer.lastName %>
          </li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter"></div>
  </div>
</div>

<form action="/orchids/<%= customer._id %>?_method=PUT" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="name">Orchid's Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value=" <%= customer.name %>"
        placeholder="name"
        required
      />
    </div>

    <div class="col">
      <label for="image">Image</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="image"
        value=" <%= customer.image %>"
        placeholder="image"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="price">Price</label>
      <input
        type="tel"
        min="0"
        class="form-control"
        id="price"
        name="price"
        value=" <%= customer.price %>"
        placeholder="price"
        required
      />
    </div>

    <div class="col">
      <label for="original">Original</label>
      <input
        type="text"
        class="form-control"
        id="original"
        name="original"
        value=" <%= customer.original %>"
        placeholder="original"
        required
      />
    </div>

    <div class="col">
      <label for="color">Color</label>
      <input
        type="text"
        class="form-control"
        id="color"
        name="color"
        value=" <%= customer.color %>"
        placeholder="color"
        required
      />
    </div>
    <div class="col">
      <label>Is Natural:</label>
      <div class="form-check">
        <input
          type="radio"
          class="form-check-input"
          id="trueRadio"
          name="isNatural"
          value="true"
          checked="<%= customer.isNatural === 'true' ? 'checked' : '' %>"
        />
        <label class="form-check-label" for="trueRadio">True</label>
      </div>
      <div class="form-check">
        <input
          type="radio"
          class="form-check-input"
          id="falseRadio"
          name="isNatural"
          value="false"
          checked="<%= customer.isNatural === 'false' ? 'checked' : '' %>"
        />
        <label class="form-check-label" for="falseRadio">False</label>
      </div>
    </div>
  </div>
  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update orchids</button>

    <button
      type="button"
      class="btn btn-danger"
      data-bs-toggle="modal"
      id="deleteButton"
      data-bs-target="#deleteModal"
    >
      Delete orchids
    </button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a orchids record.</div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the orchids record of
          <b class="fw-bold"><%= customer.name %> <%= customer.lastName %></b
          ><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/orchids/<%= customer._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            Yes, Remove Orchid
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
